db.users.updateOne({}, { $set: {created_at: new Date}});
db.users.updateMany({}, { $set: {created_at: new Date}});
db.users.updateOne({first_name: 'Avrom'}, { $set: {first_name: 'Sarvar', age: 34}});
db.users.updateOne({first_name: 'Reynolds'}, { $set: {first_name: 'Eshmat', age: 34}, $currentDate: {lastModified: true}});
db.users.updateOne({first_name: 'Sarvar'}, { $set: {first_name: 'Hikmatilla', age: 30, children: ['Hasan', 'Husan']}, $currentDate: {lastModified: true}});

