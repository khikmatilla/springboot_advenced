db.users.find({age: {$eq: 25}});
db.users.find({age: {$gt: 25}});
db.users.find({age: {$gt: 25}}).sort({age: 1}).limit(2);
db.users.find({age: {$gte: 25}}).sort({age: 1}).limit(5);
db.users.find({age: {$in: [18, 21, 37]}});
db.users.find({age: {$nin: [18, 21, 37]}}).sort({age: 1});

db.users.find({$and : [{age: {$gte: 25}}, {first_name: /^A.*/}]});
db.users.find({$or : [{age: {$gte: 63}}, {first_name: /^Ar.*/}]});
db.users.find({$nor: [{age: {$gte: 63}}, {first_name: /^A.*/}]});

